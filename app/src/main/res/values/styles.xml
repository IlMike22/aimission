<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radio_button">
        <item name="android:padding">@dimen/padding_standard</item>
    </style>


    <!-- fragment goal -->
    <style name="button_goal_save_or_delete">
        <item name="android:layout_marginStart">@dimen/margin_standard</item>
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:padding">@dimen/padding_standard</item>
    </style>

    <!-- fragment goals -->
    <style name="scroll_view_goals">
        <item name="android:layout_margin">@dimen/margin_standard</item>
    </style>

    <style name="fab_add_goal">
        <item name="android:clickable">true</item>
        <item name="android:src">@android:drawable/radiobutton_on_background</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="include_empty_screen">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <!-- settings -->
    <style name="settings_default_margins">
        <item name="android:layout_marginStart">@dimen/margin_double</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_triple</item>
    </style>

    <style name="settings_switch_enable_past_editing" parent="settings_default_margins">
        <item name="android:layout_marginTop">@dimen/margin_quartruple</item>
        <item name="android:showText">false</item>
        <item name="android:splitTrack">false</item>
        <item name="android:text">@string/settings_enable_editing_in_past</item>
    </style>

    <style name="settings_text_view_sorting" parent="settings_default_margins">
        <item name="android:text">@string/settings_sorting_mode</item>
    </style>

    <style name="settings_radio_button_sorting_creation_date">
        <item name="android:text">@string/settings_sorting_mode_creation_date</item>
    </style>

    <style name="settings_radio_button_sorting_items_done">
        <item name="android:text">@string/settings_sorting_mode_items_done</item>
    </style>

    <style name="settings_radio_button_sorting_priority">
        <item name="android:text">@string/settings_sorting_mode_priority</item>
    </style>

</resources>
