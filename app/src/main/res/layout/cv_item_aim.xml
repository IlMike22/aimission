<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aimItemCV"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@color/common_google_signin_btn_text_light_disabled"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleTV"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:layout_marginRight="72dp"
                android:text="6 Sessions Coffee Break Italian"/>


            <ImageView
                android:id="@+id/progressSwitchIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_launcher_foreground"/>

        </LinearLayout>


        <TextView
            android:id="@+id/statusTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="offen"/>

        <TextView
            android:id="@+id/progressTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3 von 5 Einheiten erreicht."/>

        <TextView
            android:id="@+id/aimTypeTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="A-Ziel"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
