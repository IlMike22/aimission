<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AimDetailScene.Views.AimDetailFragment">


    <EditText
        android:id="@+id/frg_aimdetail_txt_title"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/frg_aimdetail_tv_title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/frg_aimdetail_txt_description"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/frg_aimdetail_tv_description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_txt_title" />

    <Switch
        android:id="@+id/frg_aimdetail_switch_comesback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/frg_aimdetail_switch_periodic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_txt_description" />

    <TextView
        android:id="@+id/frg_aimdetail_tv_infoAimRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/frg_aimdetail_tv_periodic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/frg_aimdetail_switch_comesback"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_txt_description" />

    <Switch
        android:id="@+id/frg_aimdetail_switch_repeat"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="@string/frg_aimdetail_switch_repitive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_switch_comesback" />

    <EditText
        android:id="@+id/frg_aimdetail_txt_repeat"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toEndOf="@+id/frg_aimdetail_switch_repeat"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_tv_infoAimRepeatAmount"
        app:layout_constraintVertical_bias="0.245" />

    <TextView
        android:id="@+id/frg_aimdetail_tv_infoAimRepeatAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="@string/frg_aimdetail_tv_repeat_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/frg_aimdetail_txt_repeat"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_tv_infoAimRepeat" />

    <Switch
        android:id="@+id/frg_aimdetail_switch_aaim"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/frg_aimdetail_switch_aaim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_switch_repeat" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/frg_aimdetail_tv_aaim"
        app:layout_constraintStart_toEndOf="@+id/frg_aimdetail_switch_aaim"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_tv_infoAimRepeat" />

    <Button
        android:id="@+id/frg_aimdetail_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="296dp"
        android:layout_marginTop="256dp"
        android:text="@string/frg_aimdetail_btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <RadioGroup
        android:id="@+id/frg_aimdetail_rbGroup_genre"
        android:layout_width="366dp"
        android:layout_height="197dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frg_aimdetail_btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_switch_aaim">

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genrePrivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_private" />

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genreWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_work" />

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genreEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_education" />

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genreHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_health" />

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genreFun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_fun" />

        <RadioButton
            android:id="@+id/frg_aimdetail_rb_genreFinance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/frg_aimdetail_rb_finance" />

    </RadioGroup>

    <Button
        android:id="@+id/frg_aimdetail_btn_delete"
        android:layout_width="118dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="LÃ¶schen"
        app:layout_constraintEnd_toStartOf="@+id/frg_aimdetail_btn_save"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_aimdetail_rbGroup_genre"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>