<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_EmptyTextScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivNoItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:contentDescription="no items"
        android:src="@drawable/ic_no_items_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/tvNoItemsAvailable"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_margin="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/msg_no_items"
        app:layout_constraintBottom_toBottomOf="@+id/ivNoItems"
        app:layout_constraintEnd_toEndOf="@+id/ivNoItems"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/ivNoItems"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>